<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#d3d3d3">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="102dp"
        android:id="@+id/title_image_logo"
        android:src="@drawable/logo"
        android:contentDescription="@string/appLogo"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:id="@+id/title_image"
        android:src="@drawable/main_logo"
        android:contentDescription="@string/appLogoImage"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title_image_logo"
        android:layout_alignStart="@+id/title_image_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_version_1"
        android:textSize="30sp"
        android:textColor="@color/grayToolbar"
        android:id="@+id/textView7"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_version_2"
        android:textSize="28sp"
        android:textColor="@color/grayToolbar"
        android:id="@+id/textView6"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_version_3"
        android:textSize="28sp"
        android:textColor="@color/grayToolbar"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_version_4"
        android:textSize="28sp"
        android:textColor="@color/grayToolbar"
        android:id="@+id/textView5"

        android:layout_below="@+id/textView4"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_version_5"
        android:textSize="28sp"
        android:id="@+id/textView"
        android:textColor="@color/grayToolbar"

        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_version_6"
        android:textSize="28sp"
        android:textColor="@color/grayToolbar"
        android:id="@+id/textView2"
        android:layout_marginTop="39dp"

        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_version_7"
        android:textColor="@color/grayToolbar"
        android:textSize="28sp"
        android:id="@+id/textView3"

        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="399dp"
        android:layout_height="wrap_content"
        android:background="@color/btn_logout_bg"
        android:text="@string/btn_logout"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/title_image"
        android:layout_marginBottom="47dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/toolbar_shadow" />


</RelativeLayout><!-- From: file:/C:/Users/Krzysiek/Documents/ADVANCED_JAVA/ADVANCED_JAVAwc/branches/SlidingMenu/app/src/main/res/layout/about.xml -->